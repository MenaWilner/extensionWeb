{
  "name": "html-estructura",
  "displayName": "Html Estructura",
  "description": "Crear estructuras b√°sicas de carpetas HTML, CSS y JS.",
  "version": "0.0.1",
  "author": "Wilner Mena Aguilar",
  "publisher": "wilnermena",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],

  "main": "./dist/extension.js",

  "activationEvents": [
    "onView:htmlEstructuraView",
    "onCommand:html-estructura.createProject",
    "onCommand:html-estructura.gitPush"
  ],

  "contributes": {
    "commands": [
      {
        "command": "html-estructura.createProject",
        "title": "üìÅ Crear proyecto base HTML"
      },
      {
        "command": "html-estructura.gitPush",
        "title": "üöÄ Git Commit & Push"
      }
    ],

    "viewsContainers": {
      "activitybar": [
        {
          "id": "htmlEstructuraContainer",
          "title": "HTML Estructura",
          "icon": "media/icon.svg"
        }
      ]
    },

    "views": {
      "htmlEstructuraContainer": [
        {
          "id": "htmlEstructuraView",
          "name": "Acciones r√°pidas"
        }
      ]
    }
  },

  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc --watch -p ./",
    "package": "vsce package"
  },

  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.2.0",
    "vsce": "^2.15.0"
  }
}
